<!DOCTYPE html>
<html>

<head>
    <title>{{.Title}}</title>
    <meta charset="UTF-8" />
    <link href="/themes/{{.CurrentTheme}}/style.css" rel="stylesheet" />
</head>

<body data-theme="{{.CurrentTheme}}" data-dark-mode="{{.DarkMode}}" data-color-scheme="{{.ColorScheme}}">
    <div id="page-dashboard">
        <h1>{{.DashboardName}}</h1>
        <div class="dashboard-layout">
            <div class="dashboard-widgets dashboard-{{.Layout}}">
                {{range .Widgets}}
                <div class="dashboard-widget" data-widget-id="{{.ID}}">
                    <h3>{{.Type}}</h3>
                    <div hx-post="/api/dashboards/widget/{{.ID}}" hx-vals='{"dashboardId": "{{$.DashboardID}}"}'
                        hx-trigger="load" class="widget-content">
                        loading widget...
                    </div>
                </div>
                {{end}}
                {{if not .Widgets}}
                <div class="dashboard-empty">
                    <p>No widgets configured</p>
                </div>
                {{end}}
            </div>
        </div>
    </div>
    <script src="/static/htmx.min.js"></script>
</body>

</html>
