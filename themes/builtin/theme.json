{
  "name": "Builtin Theme",
  "version": "1.0.0",
  "author": "System",
  "description": "Default builtin theme",
  "themeSettings": {
    "darkMode": {
      "type": "boolean",
      "default": false,
      "label": "Dark Mode"
    },
    "colorScheme": {
      "type": "select",
      "options": ["default", "green", "red", "purple"],
      "default": "default",
      "label": "Color Scheme"
    },
    "customCSS": {
      "type": "textarea",
      "default": "",
      "label": "Custom CSS"
    },
    "fileView": {
      "type": "select",
      "options": ["detailed", "compact", "reader"],
      "default": "detailed",
      "label": "File View"
    },
    "fontFamily": {
      "type": "select",
      "options": ["system", "serif", "mono"],
      "default": "system",
      "label": "Font Family"
    },
    "sidebarMetadata": {
      "type": "boolean",
      "default": true,
      "label": "Show Metadata"
    },
    "sidebarPara": {
      "type": "boolean",
      "default": true,
      "label": "Show PARA Organization"
    },
    "sidebarConnections": {
      "type": "boolean",
      "default": true,
      "label": "Show Connections"
    },
    "sidebarToc": {
      "type": "boolean",
      "default": true,
      "label": "Show Table of Contents"
    },
    "sidebarVersionHistory": {
      "type": "boolean",
      "default": true,
      "label": "Show Version History"
    },
    "linkDisplayMode": {
      "type": "select",
      "options": ["filename", "filepath", "title"],
      "default": "filename",
      "label": "Link Display Mode",
      "description": "Show filenames, file paths, or extracted titles in links"
    }
  }
}
