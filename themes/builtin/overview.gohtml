{{ define "content" }}
<div id="page-overview">
    <h1>{{T "OVERVIEW"}}</h1>
    <div class="overview-sections">
        <section class="overview-files">
            <h2>{{T "All Files"}}</h2>
            <div class="files-list-container">
                <div class="overview-breadcrumb">
                    <a href="/">{{T "Home"}}</a>
                    â†’ <span>{{T "All Files"}}</span>

                </div>
                <div class="overview-list">
                    <div hx-get="/api/files/list" hx-trigger="load" hx-headers='{"Accept": "text/html"}'>
                        Loading files...
                    </div>
                </div>



            </div>
        </section>
        <div>
            <hr/>
        </div>
        <section class="overview-browse">
            <h2><a href="/browse">{{T "Metadata"}}</a></h2>
            <div class="browse-grid">
                <div class="browse-section">
                    <h3><a href="/browse/tag">{{T "Tags"}}</a></h3>
                    <div hx-get="/api/metadata/tags" hx-trigger="load" hx-headers='{"Accept": "text/html"}'>
                        {{T "loading tags..."}}
                    </div>
                </div>
                <div class="browse-section">
                    <h3><a href="/browse/collection">{{T "Collections"}}</a></h3>
