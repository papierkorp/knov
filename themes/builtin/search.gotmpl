<!DOCTYPE html>
<html>

<head>
    <title>{{.Title}}</title>
    <meta charset="UTF-8" />
    <link href="/themes/{{.CurrentTheme}}/style.css" rel="stylesheet" />
</head>

<body data-theme="{{.CurrentTheme}}" data-dark-mode="{{.DarkMode}}" data-color-scheme="{{.ColorScheme}}">
    <div id="page-search">
        <h1>Search Results</h1>
        <div class="search-form">
            <input type="text" value="{{.Query}}" placeholder="Search files..." hx-get="/api/search?format=cards"
                hx-target="#page-search-results" hx-trigger="keyup changed delay:300ms, load" name="q" />
        </div>
        <div id="page-search-results">
            {{if .Query}}
            <p>Loading results for: "{{.Query}}"</p>
            {{else}}
            <p>Enter a search term</p>
            {{end}}
        </div>
    </div>
    <script src="/static/htmx.min.js"></script>
</body>

</html>
