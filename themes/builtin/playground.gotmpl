<!DOCTYPE html>
<html>

<head>
    <title>{{.Title}}</title>
    <meta charset="UTF-8" />
    <link href="/themes/{{.CurrentTheme}}/style.css" rel="stylesheet" />
</head>

<body data-theme="{{.CurrentTheme}}" data-dark-mode="{{.DarkMode}}" data-color-scheme="{{.ColorScheme}}">
    <div id="playground">
        <h1>Playground</h1>
        <div class="playground-sections">
            <section>
                <table>
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>Tags</th>
                            <th>Folders</th>
                            <th>Collection</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="filename">testA.md</td>
                            <td>testA</td>
                            <td>test, testA</td>
                            <td>testA</td>
                        </tr>
                        <tr>
                            <td class="filename">testAB.md</td>
                            <td>testA, testB</td>
                            <td>test, testA</td>
                            <td>testA</td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </div>
    <script src="/static/htmx.min.js"></script>
</body>

</html>
