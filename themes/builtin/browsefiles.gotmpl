<!DOCTYPE html>
<html>

<head>
    <title>{{.Title}}</title>
    <meta charset="UTF-8" />
    <link href="/themes/{{.CurrentTheme}}/style.css" rel="stylesheet" />
</head>

<body data-theme="{{.CurrentTheme}}" data-dark-mode="{{.DarkMode}}" data-color-scheme="{{.ColorScheme}}">
    <div id="page-browse-files">
        <div class="browse-header">
            <h1>Files with {{.MetadataType}}: <span class="filter-value">{{.Value}}</span></h1>
            <div class="browse-breadcrumb">
                <a href="/">Home</a>
                → <a href="/overview">Browse</a>
                → <span>{{.MetadataType}}: {{.Value}}</span>
            </div>
        </div>
        <div class="browse-content">
            <div hx-post="/api/files/filter" hx-trigger="load" hx-vals='{{.HxVals}}' class="filter-results">
                Loading files...
            </div>
        </div>
    </div>
    <script src="/static/htmx.min.js"></script>
</body>

</html>
