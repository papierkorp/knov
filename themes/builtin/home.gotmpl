<!DOCTYPE html>
<html>

<head>
    <title>{{.Title}}</title>
    <meta charset="UTF-8" />
    <link href="/themes/{{.CurrentTheme}}/style.css" rel="stylesheet" />
</head>

<body data-theme="{{.CurrentTheme}}" data-dark-mode="{{.DarkMode}}" data-color-scheme="{{.ColorScheme}}">
    <div id="page-home">
        <h1>Home</h1>
        <section class="overview-browse">
            <h2>Browse by Metadata</h2>
            <div class="browse-grid">
                <div class="browse-section">
                    <h3>Tags</h3>
                    <div hx-get="/api/metadata/tags" hx-trigger="load" hx-headers='{"Accept": "text/html"}'>
                        loading tags...
                    </div>
                </div>
                <div class="browse-section">
                    <h3>Collections</h3>
                    <div hx-get="/api/metadata/collections" hx-trigger="load" hx-headers='{"Accept": "text/html"}'>
                        loading collections...
                    </div>
                </div>
                <div class="browse-section">
                    <h3>Folders</h3>
                    <div hx-get="/api/metadata/folders" hx-trigger="load" hx-headers='{"Accept": "text/html"}'>
                        loading folders...
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="/static/htmx.min.js"></script>
</body>

</html>
