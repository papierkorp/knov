package templates

templ FileViewDetailed(content string, filePath string, filename string) {
	@Base(filename) {
		<div id="view-fileview-detailed" class="file-detailed">
			<article class="file-content">
				@templ.Raw(content)
			</article>
			<div class="file-metadata">
				<div class="metadata-item">
					<strong>Tags:</strong>
					<span
						hx-get={ "/api/metadata/tags?filepath=" + templ.URL(filePath) }
						hx-trigger="load"
						class="inline-tags"
					>...</span>
				</div>
				<div class="metadata-item">
					<strong>Links:</strong>
					<span
						hx-get={ "/api/links/used?filepath=" + templ.URL(filePath) }
						hx-trigger="load"
						class="inline-links"
					>...</span>
				</div>
			</div>
		</div>
	}
}

