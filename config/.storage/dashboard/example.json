{
  "name": "example",
  "id": "example",
  "layout": "twoColumns",
  "global": true,
  "widgets": [
    {
      "id": "recent-todos",
      "type": "filter",
      "position": {
        "x": 0,
        "y": 0
      },
      "config": {
        "filter": {
          "criteria": [
            {
              "metadata": "tags",
              "operator": "contains",
              "value": "testA",
              "action": "include"
            },
            {
              "metadata": "tags",
              "operator": "contains",
              "value": "testB",
              "action": "exclude"
            }
          ],
          "logic": "and",
          "display": "list",
          "limit": 5
        }
      }
    },
    {
      "id": "project-overview-content",
      "type": "fileContent",
      "position": {
        "x": 1,
        "y": 0
      },
      "config": {
        "fileContent": {
          "filePath": "getting-started.md"
        }
      }
    },
    {
      "id": "high-priority-tasks",
      "type": "filter",
      "position": {
        "x": 0,
        "y": 1
      },
      "config": {
        "filter": {
          "criteria": [
            {
              "metadata": "priority",
              "operator": "equals",
              "value": "high",
              "action": "include"
            }
          ],
          "logic": "and",
          "display": "cards",
          "limit": 3
        }
      }
    },
    {
      "id": "welcome-message",
      "type": "static",
      "position": {
        "x": 1,
        "y": 1
      },
      "config": {
        "static": {
          "content": "<h3>Welcome to KNOV</h3><p>Your knowledge management system is ready to use.</p><ul><li>Create and organize markdown files</li><li>Use filters to find content</li><li>Build custom dashboards</li></ul>",
          "format": "html"
        }
      }
    }
  ]
}
