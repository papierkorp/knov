{
    "swagger": "2.0",
    "info": {
        "description": "KNOV API \\n http://localhost:1324",
        "title": "Knov API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:1324",
    "basePath": "/",
    "paths": {
        "/api/config/getConfig": {
            "get": {
                "tags": [
                    "config"
                ],
                "summary": "Get current configuration",
                "responses": {}
            }
        },
        "/api/config/setConfig": {
            "post": {
                "tags": [
                    "config"
                ],
                "summary": "Set configuration",
                "responses": {}
            }
        },
        "/api/git/getRepositoryURL": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "git"
                ],
                "summary": "Get git repository URL",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/git/setRepositoryURL": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "git"
                ],
                "summary": "Set git repository URL",
                "parameters": [
                    {
                        "description": "Repository URL",
                        "name": "repositoryUrl",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/api/health": {
            "get": {
                "tags": [
                    "health"
                ],
                "summary": "Health check",
                "responses": {}
            }
        },
        "/api/themes/getAllThemes": {
            "get": {
                "description": "Get current theme and available themes",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "themes"
                ],
                "summary": "Get themes",
                "responses": {
                    "200": {
                        "description": "{\"current\":\"themename\",\"available\":[\"theme1\",\"theme2\"]}",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/themes/setTheme": {
            "post": {
                "description": "Set new theme via form parameter",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "tags": [
                    "themes"
                ],
                "summary": "Set theme",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Theme name to set",
                        "name": "theme",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "303": {
                        "description": "Redirect to settings page"
                    }
                }
            }
        }
    }
}